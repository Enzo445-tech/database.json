<script>
    const games = [
        {
            name: "GTA V",
            desc: "Experience Rockstar Games' critically acclaimed open world game. When a young street hustler, a retired bank robber and a terrifying psychopath find themselves entangled with some of the most frightening and deranged elements of the criminal underworld, the U.S. government and the entertainment industry.",
            cover: "https://media-rockstargames-com.akamaized.net/rockstargames-newsite/img/global/games/fob/640/V.jpg",
            bg: "https://wallpapercave.com/wp/wp2035253.jpg"
        },
        {
            name: "Burnout Paradise",
            desc: "Make action your middle name as you rule the streets in Burnout Paradise Remastered. Tear up the town from hectic downtown avenues to wild mountain roads. Relive the high-octane stunts and wanton destruction of one of the greatest arcade-driving games ever.",
            cover: "https://upload.wikimedia.org/wikipedia/en/2/23/Burnout_Paradise_-_Remastered_cover_art.jpg",
            bg: "https://images6.alphacoders.com/416/416733.jpg"
        },
        {
            name: "Need For Speed Rivals",
            desc: "The line between cop and racer is constantly crossed in a street-racing rivalry that never ends. Play as either a cop or a racer, where each side of the law has its own set of high-stakes challenges, rewards and consequences. Risk everything in the ultimate high-speed rivalry.",
            cover: "https://upload.wikimedia.org/wikipedia/en/8/82/Need_for_Speed_Rivals_cover.jpg",
            bg: "https://images4.alphacoders.com/553/553755.jpg"
        }
    ];

    const grid = document.getElementById('game-grid');
    games.forEach(game => {
        const card = document.createElement('div');
        card.className = 'card';
        card.style.backgroundImage = `url('${game.cover}')`;
        card.innerHTML = `<div class="card-label">${game.name}</div>`;
        card.onclick = () => {
            document.getElementById('m-title').innerText = game.name;
            document.getElementById('m-desc').innerText = game.desc;
            document.getElementById('m-img').style.backgroundImage = `url('${game.bg}')`;
            document.getElementById('modal-overlay').style.display = 'flex';
        };
        grid.appendChild(card);
    });
</script>

